{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "paths": {
    "@components-base/*": ["components/base-components/*"],
    "@layout/*": ["components/layout/*"],
    "@components-composite/*": ["components/composite-components/*"],
    "@contstants/*": ["contstants/*"],
    "@models/*": ["models/*"],
    "@services/*": ["services/*"],
    "@themes/*": ["themes/*"],
    "@types/*": ["types/*"],
    "@utils/*": ["utils/*"],
    "@store/*": ["store/*"],
    "@tests/*": ["__tests__/*"],
    "@mocks/*": ["__mocks__/*"],
    "@src/*": ["src/*"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
